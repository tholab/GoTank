<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageViewHistori"
                    android:src="@drawable/no_image"
                    android:layout_width="170dp"
                    android:layout_height="160dp"
                    android:scaleType="fitXY"
                    android:padding="10dp"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Cv. Sedot WC"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/hitam"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:id="@+id/textNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Nama Cv"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                    <View
                        android:layout_marginTop="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/hitam"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Pemesanan"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/hitam"/>
                    <TextView
                        android:layout_marginTop="1dp"
                        android:id="@+id/textTglPemesanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Tanggal Pesan CV"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                    <View
                        android:layout_marginTop="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/hitam"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/textStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="status database"
                        android:textColor="@color/status"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000"/>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


</RelativeLayout>